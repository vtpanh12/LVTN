<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.SignupActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/top1" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.224"
        app:srcCompat="@drawable/vector" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="194dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:text="ĐĂNG KÝ"
        android:textAlignment="center"
        android:textColor="#0E6289"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.087" />

    <EditText
        android:id="@+id/etSUEmail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/btn_bg"
        android:ems="8"
        android:hint="  Email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLogin"
        app:layout_constraintVertical_bias="0.0" />


    <EditText
        android:id="@+id/eTSUMatKhau"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/btn_bg"
        android:ems="8"
        android:hint="  Mật khẩu"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSUEmail"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/eTSUCMatKhau"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/btn_bg"
        android:ems="8"
        android:hint="  Nhập lại mật khẩu"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTSUMatKhau"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tVSUDangNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="148dp"
        android:text="Nếu bạn đã có tài khoản?  Đăng nhập!"
        android:textColor="#2A4F0B"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTSUCMatKhau"
        app:layout_constraintVertical_bias="0.0" />

        <ImageView
        android:alpha="0.3"
        android:id="@+id/iVSUPW"
        android:layout_width="50dp"
        android:layout_height="39dp"
        app:layout_constraintBottom_toBottomOf="@+id/eTSUMatKhau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/eTSUMatKhau"
        app:srcCompat="@drawable/hide_pw" />

    <ImageView
        android:alpha="0.3"
        android:id="@+id/iVSUCPW"
        android:layout_width="50dp"
        android:layout_height="39dp"
        app:layout_constraintBottom_toBottomOf="@+id/eTSUCMatKhau"
        app:layout_constraintEnd_toEndOf="@+id/eTSUCMatKhau"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/eTSUCMatKhau"
        app:srcCompat="@drawable/hide_pw" />

    <Button
        android:id="@+id/btnAuthGmail"
        android:layout_width="167dp"
        android:layout_height="63dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/main_color"
        android:text="Đăng ký"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tVSUDangNhap" />

    <LinearLayout
        android:id="@+id/goiyMatKhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTSUMatKhau"
        app:layout_constraintVertical_bias="0.0"> <!-- Ẩn gợi ý ban đầu -->

        <TextView
            android:id="@+id/goiyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Mật khẩu phải bao gồm:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/goiy8KyTu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Ít nhất 8 ký tự"
            android:textColor="#FF0000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/goiyInHoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Ít nhất một chữ cái in hoa"
            android:textColor="#FF0000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/goiyInThuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Ít nhất một chữ cái in thường"
            android:textColor="#FF0000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/goiySo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Ít nhất một chữ số"
            android:textColor="#FF0000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/goiyKyTuDacBiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Ít nhất một ký tự đặc biệt"
            android:textColor="#FF0000"
            android:textSize="12sp" />
    </LinearLayout>

