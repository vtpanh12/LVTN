<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".appointment.AppointmentEditActivity">
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iVBackAppEdit"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginRight="45dp"
            android:layout_weight="0.9"
            android:gravity="center"
            android:text="Chi tiết lịch khám"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="20dp"
        android:background="@drawable/btn_custom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tVAECancelApp"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Hủy lịch khám"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iVAENo"
            android:layout_width="44dp"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/no" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_custom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tVAEEdit"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Chỉnh sửa lịch khám"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iVAEEdit"
            android:layout_width="44dp"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/edit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearAppEdit"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/button_default1"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/item_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tVAEEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Email:"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:id="@+id/tVAEUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên:" />

        <TextView
            android:textSize="14sp"
            android:id="@+id/tVAEService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dịch vụ:" />

        <TextView
            android:textSize="14sp"
            android:id="@+id/tVAEDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày hẹn:" />

        <TextView
            android:textSize="14sp"
            android:id="@+id/tVAEHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giờ hẹn:" />

        <TextView
            android:textSize="14sp"
            android:id="@+id/tVAEPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại:" />
        <TextView
            android:textSize="14sp"
            android:id="@+id/tVAENote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú:" />
        <TextView
            android:textSize="14sp"
            android:id="@+id/tVAEStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái" />
        <TextView
            android:textSize="14sp"
            android:id="@+id/tVAEDentistId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Nha sĩ:" />
<!--        <TextView-->
<!--            android:textSize="14sp"-->
<!--            android:id="@+id/tVAEDentistUsername"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Nha sĩ:" />-->
<!--        <TextView-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:textSize="14sp"-->
<!--            android:id="@+id/tVAEDentistInfo"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Thông tin liên hệ nha sĩ:" />-->
        <Button
            android:id="@+id/btnUpdateAppEdit"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:background="@drawable/btn_custom"
            android:text="Cập nhật lịch khám"
            app:backgroundTint="@null" />

    </LinearLayout>



</LinearLayout>