<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appointment.Tao_Lich_KhamActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/btn_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iVBackCreateApp"
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="0.1"
                app:srcCompat="@drawable/back" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginRight="45dp"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="Tạo lịch khám"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView21"
            android:layout_width="209dp"
            android:layout_height="42dp"
            android:textSize="25sp"
            android:text="Chọn dịch vụ" />

        <Spinner
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_user_bg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/spinner_DichVu"
            android:layout_width="match_parent"
            android:layout_height="52dp" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="42dp"
            android:textSize="25sp"
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:text="Chọn ngày" />

        <TextView
            android:padding="10dp"
            android:id="@+id/tVDate"
            android:textSize="20sp"
            android:gravity=""
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittext_user_bg"
            android:text="" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="42dp"
            android:textSize="25sp"
            android:id="@+id/textView234"
            android:layout_width="match_parent"
            android:text="Chọn giờ" />
        <TextView
            android:padding="10dp"
            android:id="@+id/tVHour"
            android:textSize="20sp"
            android:gravity=""
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittext_user_bg"
            android:text="" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="42dp"
            android:textSize="25sp"
            android:id="@+id/textView244"
            android:layout_width="match_parent"
            android:text="Ghi chú" />
        <EditText
            android:id="@+id/eTNote"
            android:background="@drawable/edittext_user_bg"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"/>

        <Button
            android:id="@+id/btnCreateApp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_margin="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_custom"
            android:text="Tạo lịch khám"
            app:backgroundTint="@null" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>