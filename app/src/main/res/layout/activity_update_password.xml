<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".users.UpdatePasswordActivity">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iVBackUpdatePW"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginRight="45dp"
            android:layout_weight="0.9"
            android:gravity="center"
            android:text="Thay đổi mật khẩu"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </LinearLayout>

    <TextView
        android:padding="20dp"
        android:textSize="20sp"
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãy nhập mật khẩu hiện tại của bạn:" />

    <EditText
        android:id="@+id/eTCurrentPW"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_user_bg"
        android:ems="10"
        android:inputType="textPassword"
        android:text="" />
    <TextView
        android:padding="20dp"
        android:textSize="20sp"
        android:id="@+id/textView210"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu mới của bạn:" />
    <EditText
        android:id="@+id/eTNewPW"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_user_bg"
        android:ems="10"
        android:inputType="textPassword"
        android:text="" />
    <TextView
        android:padding="20dp"
        android:textSize="20sp"
        android:id="@+id/textView2101"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận mật khẩu mới:" />
    <EditText
        android:id="@+id/eTCNewPW"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_user_bg"
        android:ems="10"
        android:inputType="textPassword"
        android:text="" />
    <Button
        android:id="@+id/btnUpdatePW"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_custom"
        android:text="Thay đổi mật khẩu"
        app:backgroundTint="@null" />

</LinearLayout>