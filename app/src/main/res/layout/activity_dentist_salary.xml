<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dentist.DentistSalaryActivity">
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iVBackDentistSalary"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginRight="45dp"
            android:layout_weight="0.9"
            android:gravity="center"
            android:text="Lương"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/linearLayout52"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_custom1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Số lượng ca trực:"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tVNumberShift"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="60"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/linearLayout5k2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_custom1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2k6"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Tiền lương của bạn"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tVSalaryDentist"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="10.000.060"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>