<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminDentistAssignmentEditActivity">
    <LinearLayout
        android:paddingBottom="20dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_custom1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/iVBackAdminDentistEditAss"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_margin="15dp"
                android:layout_weight="0.1"
                app:srcCompat="@drawable/back" />
            <TextView
                android:paddingRight="30dp"
                android:id="@+id/tVAssEmail"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.9"
                android:text="VO THI PHUONG ANH"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tVAssDentistId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="ID Nha sĩ:" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tVAssDentist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Họ và tên:" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tVAssDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Ngày sinh:" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:id="@+id/tVAssGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính:" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:id="@+id/tVAssPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại:" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:id="@+id/tVAssAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ:" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:id="@+id/tVAssSpecialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyên khoa:" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:id="@+id/tVAssRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chức vụ:" />

    </LinearLayout>

    <Button
        android:id="@+id/btnUpdateDentistAss"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:background="@drawable/btn_custom"
        android:text="Cập nhật lịch làm việc"
        app:backgroundTint="@null" />

</LinearLayout>