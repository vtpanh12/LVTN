<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminMedicalRecordEditActivity">
    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/btn_custom1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/item_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/iVBackAMREdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:layout_weight="0.01"
                app:srcCompat="@drawable/back" />

            <TextView
                android:id="@+id/tVAMREEmail"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Email:"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tVAMREUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Họ và tên khách hàng:" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:id="@+id/tVAMREPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại:" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:id="@+id/tVAMRETime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian: 10-10-2024  |  09:00" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:id="@+id/tVAMREDiagnosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chẩn đoán:" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:id="@+id/tVAMRETreatment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phương pháp điều trị:" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:id="@+id/tVAMREDentist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bác sĩ diều trị:" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:id="@+id/tVAMREDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày tạo: 10-07-2024" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:id="@+id/tVAMREPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hình thức thanh toán: Tiền mặt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tVAMREPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:paddingLeft="18dp"
                android:text="Tổng tiền:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/eTAMREPrice"
                android:layout_width="251dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_user_bg"
                android:ems="10"
                android:inputType="number"
                android:text="" />
        </LinearLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:id="@+id/tVAMRENotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú (đơn thuốc, ghi chú, lịch hẹn): \n" />
    </LinearLayout>


    <Button
        android:id="@+id/btnAMREEdit"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:background="@drawable/btn_custom"
        android:text="Cập nhật hồ sơ bệnh án"
        app:backgroundTint="@null" />

</LinearLayout>