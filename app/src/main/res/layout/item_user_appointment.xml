<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/button_default1"
    android:padding="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:id="@+id/tVIFUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên:" />
        <ImageView
            android:layout_marginLeft="200dp"
            android:id="@+id/iVIFEdit"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:srcCompat="@drawable/edit" />

    </LinearLayout>


    <TextView
        android:textSize="14sp"
        android:id="@+id/tVIFService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dịch vụ:" />

    <TextView
        android:textSize="14sp"
        android:id="@+id/tVIFDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày hẹn:" />

    <TextView
        android:textSize="14sp"
        android:id="@+id/tVIFHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giờ hẹn:" />

    <TextView
        android:textSize="14sp"
        android:id="@+id/tVIFPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại:" />
    <TextView
        android:textSize="14sp"
        android:id="@+id/tVIFNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghi chú:" />
    <TextView
        android:textSize="14sp"
        android:id="@+id/tVIFStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái" />


</LinearLayout>
