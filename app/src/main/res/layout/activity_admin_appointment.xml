<!--                android:text="Đặt khám"-->
<!--                android:textSize="20sp"-->
<!--                android:textStyle="bold"-->
<!--                app:backgroundTint="@null" />-->

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>